<% include partials/header.ejs %>
  <div class="container">
    <% if (message) { %>
    <p><% message %></p>
  <% } %>
  <% if (task) { %>
    <form action="" method="post" enctype="multipart/form-data">
          <div class="form-group">
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
          <input type="text" class="form-control" name="name" value="<%= task.name %>" id="user-name" placeholder="Task Name" required>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
          <input type="text" class="form-control" name="description" value="<%= task.description %>" id="task-name" placeholder="Task Description" required>
        </div>
      </div>
    </div>
        <div class="form-group">
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fa fa-clock text-info"></i></div>
          <input type="date" class="form-control" name="date" value="<%= task.date %>" id="task-description" placeholder="Task date" required>
        </div>
      </div>
    </div>
     <button type="submit" class="btn btn-primary">Edit Task</button>
    </form>
  <% } else { %>
    <p>Task Not Found. Go <a href="/add">here</a> to add tasks.</p>
  <% } %>
  </div>
</div>
</body>
</html>